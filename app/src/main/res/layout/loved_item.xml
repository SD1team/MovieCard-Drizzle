<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lovedposter"
        android:layout_width="@dimen/list_cube"
        android:layout_height="@dimen/list_cube"
        android:layout_margin="@dimen/activity_horizontal_margin" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/list_cube_margin">

        <TextView
            android:textScaleX="0.8"
            android:id="@+id/lovedtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/softBlack"
            android:textSize="@dimen/text_size" />

        <TextView
            android:textScaleX="0.8"
            android:id="@+id/lovedgenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Button
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:id="@+id/trashcan"
        android:layout_width="@dimen/list_button_cube"
        android:layout_height="@dimen/list_button_cube"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/trashcan" />
</RelativeLayout>
</LinearLayout>